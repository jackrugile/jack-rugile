{
  "name": "jack-rugile",
  "description": "Jack Rugile's Portfolio Website",
  "version": "1.0.0",
  "repository": "https://github.com/jackrugile/jack-rugile.git",
  "author": "Jack Rugile <jack@jackrugile.com> (https://jackrugile.com)",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist",
    "start": "yarn clean && parcel src/*.pug",
    "build": "yarn clean && parcel build src/*.pug --public-url ./ --no-minify && cp -r src/static/ dist",
    "cleanw": "rd /s /q \"dist\"",
    "startw": "parcel src/*.pug",
    "buildw": "yarn cleanw && parcel build src/*.pug --public-url ./ --no-minify && cp -r src/static/ dist"
  },
  "devDependencies": {
    "cssnano": "^5.0.6",
    "parcel-bundler": "^1.12.5",
    "parcel-plugin-lazy": "^0.0.4",
    "postcss": "^8.3.5",
    "pug": "^3.0.2",
    "sass": "^1.35.1",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0"
  }
}
